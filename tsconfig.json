{
   "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"]
    },
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    // "rootDir": "./src",
     "moduleResolution": "node",
     "allowJs": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "esModuleInterop": true,
     "sourceMap": true,
   },
   "ts-node": {
        "esm": true
    },
   "include": ["src/**/*.ts", "node_modules/@types"],
   "exclude": ["node_modules"]
 }
 